<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.cell.ComboBoxListCell?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.moneymanager.ui.controller.MainViewController">
    <left>
    <VBox fx:id="navigationBar" spacing="10" prefWidth="150"  BorderPane.alignment="CENTER_LEFT" >
        <Button fx:id="accountsButton" text="Accounts" />
        <Button fx:id="transactionsButton" text="Transactions" />

        <!-- Account Fields -->
        <VBox fx:id="accountFields" spacing="10" alignment="CENTER" visible="true" managed="true">
            <TextField fx:id="accountNameField" promptText="Account Name" />
            <TextField fx:id="bankNameField" promptText="Bank Name" />
            <ComboBox fx:id="accountTypeComboBox" promptText="Account Type">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="DEBT" />
                        <String fx:value="CREDIT" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Add Account" onAction="#handleAddAccount" />
        </VBox>

        <!-- Transaction Fields -->
        <VBox fx:id="transactionFields" spacing="10" alignment="CENTER" visible="false" managed="false">
            <TextField fx:id="transactionAmountField" promptText="Amount" />
            <TextField fx:id="transactionDescriptionField" promptText="Description" />
            <DatePicker fx:id="transactionDatePicker" promptText="Date" />
            <ComboBox fx:id="transactionTypeComboBox" promptText="Transaction Type">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="INCOME" />
                        <String fx:value="EXPENSE" />
                    </FXCollections>
                </items>
            </ComboBox>
            <ComboBox fx:id="accountComboBox" promptText="Account">

            </ComboBox>

            <Button text="Add Transaction" onAction="#handleAddTransaction" />
        </VBox>

    </VBox>
    </left>
    <center>
        <!-- Main Content Area -->
        <HBox fx:id="contentArea" style="-fx-padding: 10;" BorderPane.alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity" />
    </center>
</BorderPane>
